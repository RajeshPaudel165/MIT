rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read any profile image
    match /profile-images/{allImages=**} {
      allow read;
    }
    
    // Allow users to only write to their own profile images
    match /profile-images/{userId}/{allImages=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own plant images
    match /plant-images/{userId}/{allImages=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // During development, allow CORS for localhost (ONLY FOR DEVELOPMENT)
    // Remove this rule before production deployment
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
